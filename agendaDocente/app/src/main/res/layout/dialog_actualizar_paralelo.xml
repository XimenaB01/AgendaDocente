<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Features.Paralelo.ActualizarParalelo.ParaleloActualizarActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarParA"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_close" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:hint="@string/paralelo"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nomParAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:hint="@string/numeroalumnos"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/numAluAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agregarDocenteAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:text="@string/agregarDocente"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/docenteAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_docent_add_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/agregarAsignaturaAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:text="@string/agregarAsignatura"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/asignaturaAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_asignatura_black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agregarHorarioAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:text="@string/agregarHorario"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/horarioAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_hor_add_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agregarPeriodoAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:text="@string/agregarPeriodo"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/periodoAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_menu_today" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agregarTareaAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:text="@string/agregarTarea"
                    android:textSize="20sp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/tareaAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="?attr/actionModePasteDrawable" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agregarEvaluacionAct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="7dp"
                    android:textColor="#2196F3"
                    android:text="@string/agregarEvaluacion"
                    android:textSize="20sp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/evaluacionAddActBFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#FFC107"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>